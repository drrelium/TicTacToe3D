<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:local="clr-namespace:TicTacToe3D"
             x:Class="TicTacToe3D.MainPage">


    <StackLayout x:Name="Panel"
        Spacing="0">
        
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Prompt" 
                   Text="Please select a ring size."
                   FontSize="12"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   IsVisible="False"
                   Grid.Column="0" Grid.Row="0"/>

            <Picker x:Name="PlayerAmount"
                    Title="How many players are there?" 
                    FontSize="12"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   IsVisible="True"
                    BackgroundColor="Red" Grid.Column="0" Grid.Row="0">
            </Picker>
        </Grid>



        <Grid x:Name="Board"
            BackgroundColor="Black"
            Padding="5,5,5,5" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <BoxView x:Name="BoxOne" BackgroundColor="White" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="0" Grid.Row="0"
                HeightRequest="{Binding Width, Source={x:Reference BoxOne}}">
            </BoxView>
            <BoxView x:Name="BoxTwo" BackgroundColor="White" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="1" Grid.Row="0"/>
            <BoxView BackgroundColor="White" x:Name="BoxThree" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="2" Grid.Row="0" />
            <BoxView BackgroundColor="White" x:Name="BoxFour" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="0" Grid.Row="1"
                      HeightRequest="{Binding Width, Source={x:Reference BoxOne}}"/>
            <BoxView BackgroundColor="White" x:Name="BoxFive" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="1" Grid.Row="1" />
            <BoxView BackgroundColor="White" x:Name="BoxSix" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="2" Grid.Row="1" />
            <BoxView BackgroundColor="White" x:Name="BoxSeven" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="0" Grid.Row="2"
                      HeightRequest="{Binding Width, Source={x:Reference BoxOne}}"/>
            <BoxView BackgroundColor="White" x:Name="BoxEight" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="1" Grid.Row="2" />
            <BoxView BackgroundColor="White" x:Name="BoxNine" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="2" Grid.Row="2" />
        </Grid>



        
        <Grid x:Name="RingBoard"
            BackgroundColor="Purple"
            Padding="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <BoxView BackgroundColor="White" x:Name="SmallRing" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" 
                     HeightRequest="{Binding Width, Source={x:Reference SmallRing}}" Grid.Column="0" Grid.Row="0"/>
            <BoxView BackgroundColor="White" x:Name="MediumRing" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="1" Grid.Row="0" />
            <BoxView BackgroundColor="White" x:Name="LargeRing" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" Grid.Column="2" Grid.Row="0" />
        </Grid>

        

